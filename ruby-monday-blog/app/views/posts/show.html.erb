<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-2 show-post">
      <h2><%= @post.title %></h2>
      <p class="post-timestamp">
        <span class="post-info-time">
          <span class="glyphicon glyphicon-time"></span>
          Posted <%= time_ago_in_words @post.created_at %>&nbsp;ago
        </span>
        <span class="post-info-user">
          <span class="glyphicon glyphicon-user"></span>
          <%= @post.author_full_name %>
        </span>
      </p>
      <p>
        <%= image_tag(@post.image.url(:thumb), class: 'blog-img img-responsive') if @post.image %>
        <%= @post.body %>
      </p>
      <%= render 'tags/inline', tags: @post.tags %>
      <ul class="list-inline">
        <li><%= link_to('Edit', edit_post_path(@post)) if policy(@post).edit? %></li>
        <li><%= link_to('Delete', post_path(@post),
                method: :delete, data: { confirm: 'Are you sure?' }) if policy(@post).destroy? %></li>
      </ul>
      <hr />
      <div class="comments" id="comments">
        <%= render 'shared/disqus_thread' %>
      </div>
    </div>
    <%= render 'sidebar' %>
  </div>
</div>
